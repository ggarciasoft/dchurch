<h1>Lista de Cargos</h1>
<%= link_to new_position_path do %>
    <button class="btn btn-primary">Nuevo <span class="glyphicon glyphicon-plus-sign"></span></button>
<% end %>
<br>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Id</th>
      <th>Descripción</th>
      <th>Activo</th>
      <th colspan="3">Acción</th>
    </tr>
    </thead>
    <tbody>
    <% @positions.each do |position| %>
        <tr>
          <td><%= position.Id %></td>
          <td><%= position.Description %></td>
          <td><%= check_box_tag "chkActive", nil, position.Active, disabled: true %></td>
          <td><%= link_to position do %>
                <button class="btn btn-info">Ver <span class="glyphicon glyphicon-eye-open"></span></button>
            <% end %></td>
          <td><%= link_to edit_position_path(position) do %>
                <button class="btn btn-success">Editar <span class="glyphicon glyphicon-pencil"></span></button>
            <% end %>
          </td>
          <td>
            <%= link_to position, method: :delete, data: {confirm: 'Esta Seguro?'} do %>
                <button class="btn btn-danger">Eliminar <span class="glyphicon glyphicon-remove-sign"></span></button>
            <% end %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

