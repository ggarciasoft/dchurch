<div class="panel panel-default">
  <div class="panel-heading"><h3>Ministerio: #<%= @ministry.Id %></h3></div>
  <div class="panel-body">
    <p id="notice"><%= notice %></p>

    <div class="form-group">
      <label>Descripci&#243;n:</label>
      <%= @ministry.Description %>
    </div>
    <div class="form-group">
      <div class="checkbox">
        <label>
          <%= check_box_tag "chkActive", nil, @ministry.Active, disabled: true %>Activo</label>
      </div>
    </div>

    <%= link_to edit_ministry_path(@ministry) do %>
        <button class="btn btn-success">Editar <span class="glyphicon glyphicon-pencil"></span></button>
    <% end %> |
    <%= link_to ministries_path do %>
        <button class="btn btn-default">Lista <span class="glyphicon glyphicon-list"></span></button>
    <% end %>
  </div>
</div>
