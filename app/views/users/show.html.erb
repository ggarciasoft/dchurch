<div class="panel panel-default">
  <div class="panel-heading"><h3>Usuario: #<%= @user.Id %></h3></div>
  <div class="panel-body">
    <p id="notice"><%= notice %></p>

    <div class="form-group">
      <label>Usuario:</label>
      <%= @user.UserName %>
    </div>
    <div class="form-group">
      <label>Nombre Completo:</label>
      <%= @user.FullName %>
    </div>
    <div class="form-group">
      <label>Correo Electronico:</label>
      <%= @user.Email %>
    </div>

    <%= link_to edit_user_path(@user) do %>
        <button class="btn btn-success">Editar <span class="glyphicon glyphicon-pencil"></span></button>
    <% end %> |
    <%= link_to users_path do %>
        <button class="btn btn-default">Lista <span class="glyphicon glyphicon-list"></span></button>
    <% end %>
  </div>
</div>
