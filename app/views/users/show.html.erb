<div class="panel panel-default">
  <div class="panel-heading"><h3>Usuario: #<%= @user.Id %></h3></div>
  <div class="panel-body">
    <div class="alert-success padding20"><%= notice %></div>

    <div class="form-group">
      <label>Usuario:</label>
      <%= @user.UserName %>
    </div>
    <div class="form-group">
      <label>Nombre Completo:</label>
      <%= @user.FullName %>
    </div>
    <div class="form-group">
      <label>Correo Electr&#243;nico:</label>
      <%= @user.Email %>
    </div>
    <div class="form-group">
      <label>Entidad Correspondiente:</label>
      <%= @user.entitymaster.FullName %>
    </div>
    <div class="form-group">
      <div class="checkbox"><label>
        <%= check_box_tag "chkActive", nil, @user.Active, disabled: true %>Activo</label>
      </div>
    </div>

    <%= link_to edit_user_path(@user) do %>
        <button class="btn btn-success">Editar <span class="glyphicon glyphicon-pencil"></span></button>
    <% end %> |
    <%= link_to users_path do %>
        <button class="btn btn-default">Lista <span class="glyphicon glyphicon-list"></span></button>
    <% end %>
  </div>
</div>
