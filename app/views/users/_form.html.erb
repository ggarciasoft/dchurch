<%= javascript_include_tag 'users' %>
<div class="col-md-6 col-md-offset-3">
  <%= form_for(@user) do |f| %>
      <% countDetail = 0 %>
      <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this member from being saved:</h2>

            <ul>
              <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <p id="notice"><%= notice %></p>

      <div class="form-group">
        <label>Usuario</label>
        <%= f.text_field :UserName, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Contrase&#241;a</label>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Confirmar Contrase&#241;a</label>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Nombre Completo</label>
        <%= f.text_field :FullName, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Correo Electronico</label>
        <%= f.email_field :Email, class: 'form-control' %>
      </div>
      <%= render "layouts/formactions", path_to_list: users_path %>
  <% end %>
</div>
