<div class="panel panel-default">
  <div class="panel-heading"><h3>Lista de Usuarios</h3></div>
  <div class="panel-body">
    <p id="notice"><%= notice %></p>
    <%= link_to new_user_path do %>
        <button class="btn btn-primary">Nuevo <span class="glyphicon glyphicon-plus-sign"></span></button>
    <% end %>
    <br>
    <br>

    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
        <tr>
          <th>Id</th>
          <th>Usuario</th>
          <th>Nombre Completo</th>
          <th>Correo Electronico</th>
          <th>Entidad Correspondiente</th>
          <th colspan="3">Accion</th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
            <tr>
              <td><%= user.Id %></td>
              <td><%= user.UserName %></td>
              <td><%= user.FullName %></td>
              <td><%= user.Email %></td>
              <td><%= user.entitymaster.FullName %></td>
              <td><%= link_to user do %>
                    <button class="btn btn-info">Ver <span class="glyphicon glyphicon-eye-open"></span></button>
                <% end %></td>
              <td><%= link_to edit_user_path(user) do %>
                    <button class="btn btn-success">Editar <span class="glyphicon glyphicon-pencil"></span></button>
                <% end %>
              </td>
              <td>
                <%= link_to user, method: :delete, data: {confirm: 'Esta Seguro?'} do %>
                    <button class="btn btn-danger">Eliminar <span class="glyphicon glyphicon-remove-sign"></span>
                    </button>
                <% end %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>