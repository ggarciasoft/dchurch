<h1>Lista de Miembros</h1>
<%= link_to new_member_path do %>
    <button class="btn btn-primary">Nuevo <span class="glyphicon glyphicon-plus-sign"></span></button>
<% end %>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Id</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Fecha de Nacimiento</th>
      <th>Fecha de Conversión</th>
      <th>Dirección</th>
      <th>Teléfono</th>
      <th>Celular</th>
      <th>Fecha de Bautizo</th>
      <th>Activo</th>
      <th colspan="3">Acción</th>
    </tr>
    </thead>
    <tbody>
    <% @members.each do |member| %>
        <tr>
          <td><%= member.Id %></td>
          <td><%= member.FirstName %></td>
          <td><%= member.LastName %></td>
          <td><%= member.BirthDate %></td>
          <td><%= member.ConvertionDate %></td>
          <td><%= member.Address %></td>
          <td><%= member.HomePhone %></td>
          <td><%= member.CellPhone %></td>
          <td><%= member.BaptismDate %></td>
          <td><%= check_box_tag "chkActive", nil, member.Active, disabled: true %></td>
          <td><%= link_to member do %>
                <button class="btn btn-info">Ver <span class="glyphicon glyphicon-eye-open"></span></button>
            <% end %></td>
          <td><%= link_to edit_member_path(member) do %>
                <button class="btn btn-success">Editar <span class="glyphicon glyphicon-pencil"></span></button>
            <% end %>
          </td>
          <td>
            <%= link_to member, method: :delete, data: {confirm: 'Esta Seguro?'} do %>
                <button class="btn btn-danger">Eliminar <span class="glyphicon glyphicon-remove-sign"></span></button>
            <% end %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>