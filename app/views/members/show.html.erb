<p id="notice"><%= notice %></p>
<table class="paddingright20">
  <tr>
    <td><p>
      <strong>Id:</strong>
      <%= @member.Id %>
    </p>
    </td>
    <td><p>
      <strong>Nombre:</strong>
      <%= @member.FirstName %>
    </p></td>
    <td><p>
      <strong>Apellido:</strong>
      <%= @member.LastName %>
    </p></td>
  </tr>
  <tr>
    <td><p>
      <strong>Fecha de Nacimiento:</strong>
      <%= @member.BirthDate %>
    </p></td>
    <td><p>
      <strong>Fecha de Conversión:</strong>
      <%= @member.ConvertionDate %>
    </p></td>
    <td><p>
      <strong>Dirección:</strong>
      <%= @member.Address %>
    </p></td>
  </tr>
  <tr>
    <td>
      <p>
        <strong>Teléfono:</strong>
        <%= @member.HomePhone %>
      </p></td>
    <td><p>
      <strong>Celular:</strong>
      <%= @member.CellPhone %>
    </p></td>
    <td><p>
      <strong>Fecha de Bautizo:</strong>
      <%= @member.BaptismDate %>
    </p></td>
  </tr>
</table>
<p>
  <strong>Activo:</strong>
  <%= check_box_tag "chkActive", nil, @member.Active, disabled: true %>
</p>

<p>
  <strong>Imagen:</strong>
  <img id="imgPhoto" src="<%= @member.PhotoPath %>"/>
</p>

<div id="divMinisters">
  <h1>Ministerios</h1>

  <table id="tblMinistries" class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Ministerio</th>
      <th>Cargo</th>
    </tr>
    </thead>
    <tbody>
    <% @member.memberministrypositions.each do |d| %>
        <tr>
          <td><%= d.ministry.Description %></td>
          <td><%= d.position.Description %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>


<%= link_to edit_member_path(@member) do %>
    <button class="btn btn-success">Editar <span class="glyphicon glyphicon-pencil"></span></button>
<% end %> |
<%= link_to members_path do %>
    <button class="btn btn-default">Lista <span class="glyphicon glyphicon-list"></span></button>
<% end %>

