<h1>Lista de Movimientos</h1>
<%= link_to new_movement_path do %>
    <button class="btn btn-primary">Nuevo <span class="glyphicon glyphicon-plus-sign"></span></button>
<% end %>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Id</th>
      <th>Fecha de Movimiento</th>
      <th colspan="3">Acci√≥n</th>
    </tr>
  </thead>

  <tbody>
    <% @movements.each do |movement| %>
      <tr>
        <td><%= movement.Id %></td>
        <td><%= movement.MovementDate %></td>
        <td><%= link_to movement do %>
              <button class="btn btn-info">Ver <span class="glyphicon glyphicon-eye-open"></span></button>
          <% end %></td>
        <td><%= link_to edit_movement_path(movement) do %>
              <button class="btn btn-success">Editar <span class="glyphicon glyphicon-pencil"></span></button>
          <% end %>
        </td>
        <td>
          <%= link_to movement, method: :delete, data: {confirm: 'Esta Seguro?'} do %>
              <button class="btn btn-danger">Eliminar <span class="glyphicon glyphicon-remove-sign"></span></button>
          <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
