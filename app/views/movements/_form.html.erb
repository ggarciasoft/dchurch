<%= form_for(@movement) do |f| %>
    <% if @movement.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@movement.errors.count, "error") %> prohibited this movement from being saved:</h2>

          <ul>
            <% @movement.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p id="notice"><%= notice %></p>

    <div class="field">
      Fecha de Movimiento<br>
      <%= f.date_field :MovementDate %>
    </div>
    <div class="field">
      Tipo de Movimiento<br>
      <%= f.select :movementtype_id, @movementTypes %>
    </div>
    <div class="field">
      Tipo de Entidad<br>
      <%= f.select :entitytype_id, @entityTypes %>
    </div>
    <div class="field">
      Entidad<br>
      <%= f.text_field :EntityReference %>
    </div>
    <div class="field">
      Tipo de Activo<br>
      <%= f.select :asset_id, @assets %>
    </div>
    <div class="field">
      Cantidad<br>
      <%= f.text_field :AssetQuantity %>
    </div>
    <div class="field">
      Comentario<br>
      <%= f.text_area :Comments %>
    </div>
    <%= render "layouts/formactions", path_to_list: movements_path %>
<% end %>
