<div class="panel panel-default">
  <div class="panel-heading"><h3>Miembro: #<%= @movement.Id %></h3></div>
  <div class="panel-body">
    <div class="alert-success padding20"><%= notice %></div>

    <div class="col-md-6">
      <div class="form-group">
        <label>Fecha de Movimiento:</label>
        <%= @movement.MovementDate %>
      </div>
      <div class="form-group">
        <label>Comentarios:</label>
        <%= @movement.Comments %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3>Detalle Movimientos
            </h3>
          </div>
          <div id="divMovements" class="panel-body">
            <table id="tblMovements" class="table table-striped table-bordered">
              <thead>
              <tr>
                <th>Tipo de Movimiento</th>
                <th>Tipo de Entidad</th>
                <th>Entidad</th>
                <th>Tipo de Activo</th>
                <th>Cantidad</th>
                <th>Comentario</th>
              </tr>
              </thead>
              <tbody>
              <% @movement.movementsdetails.each do |m| %>
                  <tr>
                    <td>
                      <%= m.movementType_Description %>
                    </td>
                    <td>
                      <%= m.entityType_Description %>
                    </td>
                    <td>
                      <%= m.entityReference %>
                    </td>
                    <td>
                      <%= m.asset_Description %>
                    </td>
                    <td>
                      <%= m.assetQuantity %>
                    </td>
                    <td>
                      <%= m.Comment %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <%= link_to edit_movement_path(@movement) do %>
        <button class="btn btn-success">Editar <span class="glyphicon glyphicon-pencil"></span></button>
    <% end %> |
    <%= link_to movements_path do %>
        <button class="btn btn-default">Lista <span class="glyphicon glyphicon-list"></span></button>
    <% end %>
  </div>
</div>